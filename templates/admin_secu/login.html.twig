{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block monTitre %}
    Login
{% endblock %}
{% block body %}
{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey | trans(error.messagedate, 'security')}}
    </div>
{% endif %}
<form action="{{path('connexion')}}" method="post">
    <div class="form-group">
        <label for="">Login :</label>
        <input type="text" name="_username" id="login" class="form-control m-1" placeholder="your login" aria-describedby="helpId" required>
    </div>
    <div class="form-group">
        <label for="">Password :</label>
        <input type="password" name="_password" id="password" class="form-control m-1" placeholder="Enter your password" aria-describedby="helpId" required>
        {# <small id="helpId" class="text-muted">Help text</small> #}
        <input type="submit" class="btn btn-primary m-1" value="S'identifier">
    </div>
</form>
{% endblock %}

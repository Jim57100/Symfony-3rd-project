{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}

{% block navbar %}{% endblock %}

{% block monTitre %}Liste des aliments{% if isCalorie %} avec moins de 50 calories.{% endif %}{% endblock %}

{% block body %}
<a href="{{path('alimentsParCalorie', {"calorie":50}) }}" class="m-1">Aliment avec moins de 50 cal/100g.</a>
    <div class="row">
        {% for aliment in aliments %}
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card mb-3 mx-auto" style="max-width:20rem;">
                    <div class="card-header text-center">
                        <img src="{{asset('images/' ~ aliment.image)}} " class="card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{ aliment.nom }}</h3>
                        <div class="card-text">
                            <h4 class="text-center"> Prix (€/kg) : {{ aliment.prix }}</h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{ aliment.calories }}</td>
                                </tr>
                                <tr>
                                    <td>Protéines</td>
                                    <td>{{ aliment.proteine }}</td>
                                </tr>
                                <tr>
                                    <td>Glucides</td>
                                    <td>{{ aliment.glucide }}</td>
                                </tr>
                                <tr>
                                    <td>Lipides</td>
                                    <td>{{ aliment.lipides }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
